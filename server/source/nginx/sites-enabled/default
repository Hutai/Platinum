upstream tomcat
{ 
	server 127.0.0.1:8080;
} 

server {
	listen   80;

	server_name localhost;
	
	location /admin {
		proxy_pass http://tomcat/admin;
	}

	location /api {
		proxy_pass http://tomcat/api;
	}
}
