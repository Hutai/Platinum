<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="show_sql">true</property>
        
        <!-- JDBC 连接池（使用 Oracle 内置连接池） -->
        <property name="connection.pool_size">1</property>
        
        <!-- 数据库连接设置 -->
        <property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="connection.url">jdbc:oracle:thin:@localhost:1521:ptcms</property>
        <property name="connection.username">PT_SYS</property>
        <property name="connection.password">sys</property>
        
        <!-- SQL 方言 -->
        <property name="dialect">org.hibernate.dialect.Oracle10gDialect</property>
        
        <!-- 关闭二级缓存  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        
        <property name="current_session_context_class">thread</property>
        
        <!-- 实体类型映射 -->
        <mapping class="platinum.security.po.UserPO"/>
        <mapping class="platinum.security.po.UserGroupPO"/>
        
        <mapping class="platinum.cms.common.po.PostContentPO"/>
        <mapping class="platinum.cms.common.po.PostViewsPO"/>
        <mapping class="platinum.cms.common.po.PostPO"/>
        <mapping class="platinum.cms.common.po.SubcategoryPO"/>
        <mapping class="platinum.cms.common.po.CategoryPO"/>
    </session-factory>
</hibernate-configuration>