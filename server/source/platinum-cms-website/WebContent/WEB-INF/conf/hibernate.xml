<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.show_sql">true</property>
        
        <!-- JDBC 连接池（使用 Oracle 内置连接池） -->
        <property name="hibernate.connection.pool_size">1</property>
        
        <!-- 数据库连接设置 -->
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:ptcms</property>
        <property name="hibernate.connection.username">PT_SYS</property>
        <property name="hibernate.connection.password">sys</property>
        
        <!-- SQL 方言 -->
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        
        
        
        <!-- 二级缓存  -->
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.use_query_cache">true</property>
        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
        <property name="hibernate.cache.use_structured_entries">true</property>
        
        
        <!-- 当前会话模式 -->
        <property name="hibernate.current_session_context_class">thread</property>
        
        
        
        <!-- 实体类型映射 -->
        <mapping class="platinum.security.po.UserPO"/>
        <mapping class="platinum.security.po.UserGroupPO"/>
        
        <mapping class="platinum.cms.common.po.PostContentPO"/>
        <mapping class="platinum.cms.common.po.PostViewsPO"/>
        <mapping class="platinum.cms.common.po.PostPO"/>
        <mapping class="platinum.cms.common.po.SubcategoryPO"/>
        <mapping class="platinum.cms.common.po.CategoryPO"/>
    </session-factory>
</hibernate-configuration>